        "/api/v1/app/idea/{id}": {
            "get": {
                "tags": [
                    "Ideas"
                ],
                "summary": "نمایش جزئیات ایده",
                "description": "نمایش کامل اطلاعات یک ایده بر اساس شناسه",
                "operationId": "showIdea",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "شناسه یکتای ایده",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int64",
                            "example": 1
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "عملیات موفق",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "success"
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "جزئیات موضوع با موفقیت دریافت شد."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "ایده یافت نشد",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "error"
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "موضوع مورد نظر یافت نشد."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/app/idea/{ideaId}": {
            "put": {
                "tags": [
                    "Idea"
                ],
                "summary": "به‌روزرسانی ایده",
                "description": "این endpoint برای به‌روزرسانی عنوان ایده با شناسه مشخص استفاده می‌شود.",
                "operationId": "updateIdea",
                "parameters": [
                    {
                        "name": "ideaId",
                        "in": "path",
                        "description": "شناسه یکتای ایده",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "example": 1
                        }
                    }
                ],
                "requestBody": {
                    "description": "داده‌های مورد نیاز برای به‌روزرسانی ایده",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "title",
                                    "description",
                                    "participation_type"
                                ],
                                "properties": {
                                    "title": {
                                        "description": "عنوان ایده (حداکثر 255 کاراکتر)",
                                        "type": "string",
                                        "maxLength": 255,
                                        "example": "عنوان جدید ایده"
                                    },
                                    "description": {
                                        "description": "محتوای کامل توضیحات ایده",
                                        "type": "string",
                                        "example": "توضیحات کامل درباره ایده جدید"
                                    },
                                    "participation_type": {
                                        "description": "نوع مشارکت در ایده",
                                        "type": "string",
                                        "enum": [
                                            "individual",
                                            "team"
                                        ],
                                        "example": "individual"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "عملیات موفق",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "success"
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "ایده با موفقیت به‌روزرسانی شد."
                                        },
                                        "data": {
                                            "properties": {
                                                "idea": {
                                                    "properties": {
                                                        "id": {
                                                            "type": "integer",
                                                            "example": 1
                                                        },
                                                        "title": {
                                                            "type": "string",
                                                            "example": "عنوان جدید ایده"
                                                        },
                                                        "description": {
                                                            "type": "string",
                                                            "example": "توضیحات کامل"
                                                        },
                                                        "participation_type": {
                                                            "description": "نوع مشارکت: team یا individual",
                                                            "type": "string",
                                                            "example": "individual"
                                                        },
                                                        "updated_at": {
                                                            "type": "string",
                                                            "format": "date-time",
                                                            "example": "2023-05-01T12:00:00Z"
                                                        }
                                                    },
                                                    "type": "object"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "ورودی نامعتبر",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Invalid input"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "ایده پیدا نشد",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Idea not found"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "خطای اعتبارسنجی",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "The given data was invalid."
                                        },
                                        "errors": {
                                            "properties": {
                                                "title": {
                                                    "type": "array",
                                                    "items": {
                                                        "type": "string",
                                                        "example": "The title field is required."
                                                    }
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
