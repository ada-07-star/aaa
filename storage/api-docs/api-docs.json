                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "success"
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "لیست نظرات با موفقیت دریافت شد"
                                        },
                                        "data": {
                                            "properties": {
                                                "comments": {
                                                    "type": "array",
                                                    "items": {
                                                        "properties": {
                                                            "id": {
                                                                "type": "integer",
                                                                "example": 32323
                                                            },
                                                            "idea": {
                                                                "properties": {
                                                                    "title": {
                                                                        "type": "string",
                                                                        "example": "موضوعات عام"
                                                                    },
                                                                    "id": {
                                                                        "type": "integer",
                                                                        "example": 32323
                                                                    }
                                                                },
                                                                "type": "object"
                                                            },
                                                            "comment_text": {
                                                                "type": "string",
                                                                "example": "رواق کودک"
                                                            },
                                                            "likes": {
                                                                "type": "integer",
                                                                "example": 0
                                                            },
                                                            "created_at": {
                                                                "type": "string",
                                                                "format": "date-time",
                                                                "example": "2025-02-12 16:27:01"
                                                            },
                                                            "status": {
                                                                "properties": {
                                                                    "title": {
                                                                        "type": "string",
                                                                        "example": "پیش نویس"
                                                                    },
                                                                    "slug": {
                                                                        "type": "string",
                                                                        "example": "draft"
                                                                    }
                                                                },
                                                                "type": "object"
                                                            },
                                                            "created_by": {
                                                                "properties": {
                                                                    "name": {
                                                                        "type": "string",
                                                                        "example": "نام"
                                                                    },
                                                                    "family": {
                                                                        "type": "string",
                                                                        "example": "نام خانوادگی"
                                                                    }
                                                                },
                                                                "type": "object"
                                                            }
                                                        },
                                                        "type": "object"
                                                    }
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "403": {
                        "description": "Forbidden",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "error"
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "این ایده منتشر نشده است"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            },
            "post": {
                "tags": [
                    "Idea Comments"
                ],
                "summary": "Create a new comment for an idea",
                "description": "Allows users to post comments on active ideas",
                "operationId": "storeIdeaComment",
                "parameters": [
                    {
                        "name": "idea",
                        "in": "path",
                        "description": "ID of the idea to comment on",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int64"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "comment_text"
                                ],
                                "properties": {
                                    "comment_text": {
                                        "type": "string",
                                        "maxLength": 1000,
                                        "minLength": 3,
                                        "example": "این یک نظر تستی است"
                                    },
                                    "parent_id": {
                                        "description": "ID of parent comment if this is a reply",
                                        "type": "integer",
                                        "example": null
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Comment created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "success"
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "نظر با موفقیت ثبت شد"
                                        },
                                        "data": {
                                            "properties": {
                                                "comment": {
                                                    "properties": {
                                                        "id": {
                                                            "type": "integer",
                                                            "example": 123
                                                        },
                                                        "idea": {
                                                            "properties": {
                                                                "title": {
                                                                    "type": "string",
                                                                    "example": "عنوان ایده"
                                                                },
                                                                "id": {
                                                                    "type": "integer",
                                                                    "example": 2
                                                                },
                                                                "current_state": {
                                                                    "type": "string",
                                                                    "example": "active"
                                                                },
                                                                "participation_type": {
                                                                    "type": "string",
                                                                    "example": "individual"
                                                                }
                                                            },
                                                            "type": "object"
                                                        },
                                                        "comment_text": {
                                                            "type": "string",
                                                            "example": "این یک نظر تستی است"
                                                        },
                                                        "parent_id": {
                                                            "type": "integer",
                                                            "example": null,
                                                            "nullable": true
                                                        },
                                                        "likes": {
                                                            "type": "integer",
                                                            "example": 0
                                                        },
                                                        "created_at": {
                                                            "type": "string",
                                                            "format": "date-time",
                                                            "example": "2025-02-12 16:27:01"
                                                        },
                                                        "updated_at": {
                                                            "type": "string",
                                                            "format": "date-time",
                                                            "example": "2025-02-12 16:27:01"
                                                        },
                                                        "status": {
                                                            "type": "string",
                                                            "example": "active"
                                                        }
                                                    },
                                                    "type": "object"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "403": {
                        "description": "Forbidden",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "error"
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "در حال حاضر امکان ثبت نظر برای این ایده وجود ندارد"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "The given data was invalid."
                                        },
                                        "errors": {
                                            "properties": {
                                                "comment_text": {
                                                    "type": "array",
                                                    "items": {
                                                        "type": "string",
                                                        "example": "متن نظر الزامی است"
                                                    }
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
